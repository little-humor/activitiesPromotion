/* miniprogram/pages/person/person.wxss */

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 
.userInfo {
  width: 100%;
  height: 250rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background-color: #ff7f50;
}
.userInfo .avatar {
  margin: 0 50rpx;
  width: 150rpx;
  height: 150rpx;
  border-radius: 100%;
}
.tab {
  width: 750rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height: 100rpx;
  background-color: #fff
}
.tab image {
  width: 60rpx;
  height: auto;
  margin: 0 50rpx;
}
.line {
  background: #eeeeee;
  width: 650rpx;
  height: 2rpx;
}